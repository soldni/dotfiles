# This file one-line commands that use agents to do things.

function claude-commit() {
    has_claude=$(which claude 2>/dev/null)
    if [ -z "${has_claude}" ]; then
        echo "Claude CLI not found"
        return 1
    fi

    claude --model sonnet --allowedTools 'Bash(git:*) Edit' --print  "Write a commit message for the staged changes and commit. If there are no staged changes, stage all changes first (including untracked files)."
    return 0
}
