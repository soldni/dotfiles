// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-thinking-latest"
    }
  },
  "buffer_font_features": {
    "calt": 1
  },
  "buffer_font_family": "Iosevka Fixed",
  "ui_font_family": "Iosevka Comfy",
  "multi_cursor_modifier": "cmd_or_ctrl",
  "minimap": {
    "show": "never"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "selection_highlight": false,
  "auto_indent_on_paste": true,
  "show_whitespaces": "none",
  "show_edit_predictions": true,
  "ensure_final_newline_on_save": true,
  "wrap_guides": [115],
  "preferred_line_length": 115,
  "soft_wrap": "editor_width",
  "allow_rewrap": "anywhere",
  "debugger": {
    "dock": "right"
  },
  "terminal": {
    "dock": "right"
  },
  "project_panel": {
    "auto_reveal_entries": false
  },
  "tabs": {
    "close_position": "left"
  },
  "when_closing_with_no_tabs": "close_window",
  "preview_tabs": {
    "enable_preview_from_code_navigation": true
  },
  "icon_theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Frapp√©"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "base_keymap": "SublimeText",
  "ui_font_size": 15,
  "unstable.ui_density": "compact",
  "buffer_font_size": 13,
  "buffer_line_height": {
    "custom": 1.35
  },
  "theme": {
    "mode": "system",
    "light": "Dawnfox - opaque",
    "dark": "Nordfox - opaque"
  },
  "auto_install_extensions": {
    "html": true,
    "catppuccin": true,
    "toml": true,
    "dockerfile": true,
    "catppuccin-icons": true,
    "latex": true,
    "ruff": true,
    "nvim-nightfox": true,
    "noctis-port": true
  },
  "languages": {
    "Python": {
      "language_servers": ["basedpyright", "ruff"]
    }
  }
}
