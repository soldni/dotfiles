// Place your key bindings in this file to override the defaults
[
    {
        "key": "alt+cmd+b",
        "command": "composer.toggleBrowserTab"
    },
    {
        "key": "shift+cmd+b",
        "command": "-composer.toggleBrowserTab"
    },
    {
        "key": "shift+cmd+y",
        "command": "workbench.view.scm",
        "when": "workbench.scm.active"
    },
    {
        "key": "ctrl+shift+g",
        "command": "-workbench.view.scm",
        "when": "workbench.scm.active"
    },
    {
        "key": "ctrl+cmd+b",
        "command": "workbench.action.tasks.build",
        "when": "taskCommandsRegistered"
    },
    {
        "key": "shift+cmd+b",
        "command": "-workbench.action.tasks.build",
        "when": "taskCommandsRegistered"
    },
    {
        "key": "ctrl+[ [",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "cmd+b",
        "command": "-workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "cmd+escape",
        "command": "-claude-vscode.terminal.open.keyboard",
        "when": "config.claudeCode.useTerminal"
    },
    {
        "key": "cmd+escape",
        "command": "-claude-vscode.blur",
        "when": "!config.claudeCode.useTerminal && !editorTextFocus"
    },
    {
        "key": "cmd+escape",
        "command": "-claude-vscode.focus",
        "when": "editorTextFocus && !config.claudeCode.useTerminal"
    },
    {
        "key": "ctrl+] ]",
        "command": "workbench.action.toggleAuxiliaryBar",
        "when": "!isAuxiliaryWindowFocusedContext"
    },
    {
        "key": "alt+cmd+b",
        "command": "-workbench.action.toggleAuxiliaryBar",
        "when": "!isAuxiliaryWindowFocusedContext"
    },
    {
        "key": "shift+enter",
        "command": "workbench.action.terminal.sendSequence",
        "args": {
            "text": "\u001b\r"
        },
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+] 1",
        "command": "claudeVSCodeSidebar.focus"
    },
    {
        "key": "ctrl+] 2",
        "command": "workbench.view.extension.codexViewContainer"
    }
]
